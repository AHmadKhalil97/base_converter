        <LinearLayout
            android:id="@+id/dialogButtonsLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialogEditTextRelative"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialogNutralButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/alertColor"
                android:textColor="@color/buttonsColor"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/dialogNegativeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/alertColor"
                android:textColor="@color/buttonsColor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/dialogPositiveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/alertColor"
                android:textColor="@color/buttonsColor"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>

